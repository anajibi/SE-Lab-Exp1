## Environment ##
NODE_ENV=production


## Server ##
PORT=8081
HOST=localhost

## Setup jet-logger ##
JET_LOGGER_MODE=FILE
JET_LOGGER_FILEPATH=log/production/jet-logger.log
JET_LOGGER_TIMESTAMP=TRUE
JET_LOGGER_FORMAT=LINE

## Authentication ##
# SECURE_COOKIE 'false' here for demo-ing. But ideally should be true.
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
SECURE_COOKIE=false
JWT_SECRET=xxxxxxxxxxxxxx
COOKIE_SECRET=xxxxxxxxxxxxxx
# expires in 3 days
COOKIE_EXP=259200000
## Database ##
## Database ##
DB_INSTANCE_NAME=mainservice
DB_CONNECTION_STRING=postgressql://sharifdrive_mainservice:sharifdrive_mainservice_password@localhost:5432/sharifdrive
